---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<html>
  <head>
    <title>Blog</title>
  </head>
  <body>
    <h1>Blog</h1>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
            <p>{post.data.date}</p>
            <p>{post.data.description}</p>
          </li>
        ))
      }
    </ul>
  </body>
</html>
