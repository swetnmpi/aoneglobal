<!-- Team area start -->
<section class="team-area grey-soft-bg pt-110 pb-80">
  <div class="container">
    <div class="row">
      {
        teamMembers.map((member) => (
          <div class={`col-xxl-3 col-xl-3 col-lg-3 col-md-6 wow fadeInUp`} data-wow-delay={member.delay} style={{ visibility: "visible", animationDelay: member.delay, animationName: "fadeInUp" }}>
            <div class="team text-center mb-30">
              <div class="team__thumb team__thumb-2 mb-25">
                <Image src={member.image} alt={member.name} />
                <div class="team__thumb-info">
                  <div class="team-social">
                    {member.socials.map((social) => (
                      <a href="#">
                        <i class={`fab fa-${social}`} />
                      </a>
                    ))}
                  </div>
                </div>
              </div>
              <div class="team__text">
                <h3 class="team__text-title" style={{ textTransform: "uppercase" }}>
                  <a href="">{member.name}</a>
                </h3>
                <span>{member.designation}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<!-- Team area end -->
