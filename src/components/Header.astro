---
import { Image } from "astro:assets";
import logo from "@assets/img/logo/logo.webp";
---

<header>
  <div class="header-top">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xxl-8 col-lg-6">
          <div class="header-top-left">
            <ul style="display: flex;">
              <li style="margin-right: 30px;">
                <i class="fas fa-envelope brand-color2"></i>
                <a href="mailto:delhi@theaoneglobal.com" class="brand-color2">delhi@theaoneglobal.com</a>
              </li>
              <li>
                <i class="fas fa-phone-alt brand-color2"></i>
                <a href="tel:+91-9821670673" class="brand-color2">+91-9821670673</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-xxl-4 col-lg-6">
          <div class="topheader-info">
            <div class="header-location f-right">
              <ul style="display: flex;">
                <li style="margin-right: 10px;">
                  <i class="fas fa-headset brand-color2 font-bold"></i>
                  <a href="/contact-us" class="brand-color2 font-bold brand-color2 font-bold">Request a Callback</a>
                </li>
                <li>
                  <a href="https://www.facebook.com/aoneglobaldelhi" target="_blank">
                    <i class="brand-color2 font-bold fab fa-facebook"></i>
                  </a>
                </li>
                <li>
                  <a href="https://www.youtube.com/@aoneglobalconsultantsindia" target="_blank">
                    <i class="brand-color2 font-bold fab fa-youtube"></i>
                  </a>
                </li>
                <li>
                  <a href="https://www.instagram.com/aoneglobalconsultantsdelhi/" target="_blank">
                    <i class="brand-color2 font-bold fab fa-instagram"></i>
                  </a>
                </li>
                <li>
                  <a href="https://www.linkedin.com/company/a-one-global-consultants/" target="_blank">
                    <i class="brand-color2 font-bold fab fa-linkedin"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="header-menu header-sticky">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xxl-2 col-xl-2 col-lg-2 col-8">
          <div class="header-logo">
            <a href="/">
              <Image src={logo} class="img-fluid" alt="img" />
            </a>
          </div>
        </div>
        <div class="col-xxl-7 col-xl-7 col-lg-7 col-4">
          <div class="main-menu d-none d-lg-block">
            <nav id="mobile-menu">
              <ul>
                <li class="menu-item-has-children">
                  <a>About</a>
                  <ul class="sub-menu">
                    <li><a href="/our-team">Our Team</a></li>
                    <li><a href="/branches">Branches</a></li>
                  </ul>
                </li>
                <li class="menu-item-has-children">
                  <a href="">Services</a>
                  <ul class="sub-menu">
                    <li><a href="/sop-interview-preparation">SOP & Interview Preparation</a></li>
                    <li><a href="/job-ready-program">Job Ready Program</a></li>
                    <li><a href="/professional-year-program">Professional Year Program</a></li>
                    <li><a href="/health-care-insurance">Health Care Insurance</a></li>
                    <li><a href="/english-test-preparation-classes">English Test Preparation Classes</a></li>
                    <li><a href="/visa-documentation-guidance">Visa Documentation Guidance</a></li>
                    <li><a href="/visa-and-migration-services">Visa and Migration Services</a></li>
                    <li><a href="/schalorship-assistance">Scholarship Assistance</a></li>
                    <li><a href="/colleges-and-universities-admissions">Colleges and Universities Admissions</a></li>
                  </ul>
                </li>
                <li class="menu-item-has-children">
                  <a href="">Destination</a>
                  <ul class="sub-menu">
                    <li><a href="/study-in-australia">Australia</a></li>
                    <li><a href="/study-in-canada">Canada</a></li>
                    <li><a href="/study-in-uk">UK</a></li>
                    <li><a href="/study-in-usa">USA</a></li>
                    <li><a href="/study-in-europe">Europe</a></li>
                  </ul>
                </li>
                <li class="menu-item-has-children">
                  <a href="#">Test Preparation</a>
                  <ul class="sub-menu">
                    <li><a href="/ielts-test-preparation">IELTS Test Preparation</a></li>
                    <li><a href="/pte-test-preparation">PTE Test Preparation</a></li>
                    <li><a href="/sat-test-preparation">SAT Test Preparation</a></li>
                    <li><a href="/toefl-preparation">TOEFL Preparation</a></li>
                    <li><a href="/interview-preparation"> Interview Preparation</a></li>
                  </ul>
                </li>
                <li class="">
                  <a href="/MBBS_abroad">MBBS Abroad</a>
                </li>
              </ul>
            </nav>
          </div>
          <div class="side-menu-icon d-lg-none text-end">
            <button class="side-toggle"><i class="far fa-bars"></i></button>
          </div>
        </div>
        <div class="col-xxl-3 col-xl-3 col-lg-3">
          <div class="main-menu-wrapper d-flex align-items-center justify-content-end">
            <div class="main-menu-wrapper__call-number d-flex align-items-center">
              <div class="main-menu-wrapper__call-text">
                <div class="top-button f-right">
                  <a href="/eligibility-contact-page">Free Counselling</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="offcanvas-overlay"></div>
  <div class="fix">
    <div class="side-info">
      <button class="side-info-close"><i class="fal fa-times"></i></button>
      <div class="side-info-content">
        <div class="mobile-menu"></div>
      </div>
    </div>
  </div>
</header>
